generator client {
  provider = "prisma-client-js"
  output   = "../src/__generated__/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Та сама БД що й backend; Person та ViberListing з personId — на backend
model ViberListing {
  id            Int      @id @default(autoincrement())
  rawMessage    String   @db.Text
  senderName    String?
  listingType   String
  route         String
  date          DateTime
  departureTime String?
  seats         Int?
  phone         String
  notes         String?
  isActive      Boolean  @default(true)
  personId      Int?     // Посилання на Person (таблиця на backend)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
